function plotRocketState(roro)

    plotRocketBody(roro)
    
    X = 1;
    Y = 2;
    D = roro.D;
    R = D/2;
    brakeLength = 30e-2;
    brakeWidth = 2e-2;
    brakeAngle = 1*2*pi/360;
    brakePos = 0.70;
    
    brakeRight = [R-brakeWidth R R R-brakeWidth; brakePos brakePos ...
                  brakePos-brakeLength brakePos-brakeLength] ;
    brakeLeft =  brakeRight - 2*brakeRight(X,:);        
    
    % rotate the airbrakes
    R = [cos(brakeAngle) -sin(brakeAngle); sin(brakeAngle) cos(brakeAngle)];
    C = zeros(2,4);
    C = C+brakeRight(:,2);
    hSquare = fill(brakeRight(X,:),brakeRight(Y,:),'r');
    
    for k=1:90
    
    V = get(hSquare,'Vertices')';       % get the current set of vertices
    V = R*(V - C) + C;                   % do the rotation relative to the top right edge of the brake
    set(hSquare,'Vertices',V');          % % update the vertices
    pause(0.05)
    
    end
    
    brakeAngle = -1*2*pi/360;
    R = [cos(brakeAngle) -sin(brakeAngle); sin(brakeAngle) cos(brakeAngle)];
    
    for k=1:90
    
    V = get(hSquare,'Vertices')';       % get the current set of vertices
    V = R*(V - C) + C;                   % do the rotation relative to the top right edge of the brake
    set(hSquare,'Vertices',V');          % % update the vertices
    pause(0.05)
    
    end
end